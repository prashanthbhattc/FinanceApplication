@using Fis.Ui.Areas.Common.Models;
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutCommon.cshtml";
}

<style>
    .back {
        background-image: url('../Images/Login.jpg');
        background-size: cover;
        width:50%;
        margin-top:20%;
        margin-left:30%;
    }
</style>

    <div class="card back" >
        @*<img class="card-img-top" src="~/Images/Login.png" alt="Card image cap">*@
        <div class="card-body" >
            <form asp-controller="Login" asp-action="Login" asp-area="common"  >
                <div class="form-group">
                    <label for="txtEmail">Email address</label>
                    <input type="email" class="form-control" id="txtEmail" aria-describedby="emailHelp" placeholder="Enter email" asp-for="UserName" >
                </div>
                <div class="form-group">
                    <label for="txtPassword">Password</label>
                    <input type="password" class="form-control" id="txtPassword" placeholder="Password" asp-for="Password">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="chkRemember" asp-for="RememberMe">
                    <label class="form-check-label" for="chkRemember">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

   